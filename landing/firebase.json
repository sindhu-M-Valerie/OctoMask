{
  "hosting": {
    "public": "landing",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
        "source": "/app",
        "destination": "https://your-app-domain.com",
        "type": 302
      },
      {
        "source": "/github", 
        "destination": "https://github.com/yourusername/octomask",
        "type": 302
      }
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "X-Frame-Options",
            "value": "DENY"
          },
          {
            "key": "X-Content-Type-Options", 
            "value": "nosniff"
          }
        ]
      }
    ]
  }
}
